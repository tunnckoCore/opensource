{
  "name": "@tunnckocore/opensource",
  "description": "Delivering delightful digital solutions. Open Source Monorepo (of monorepos), semantically versioned following Conventional Commits. Fully powered by Lerna, Jest and Babel.",
  "homepage": "https://github.com/tunnckocore/opensource",
  "private": true,
  "workspaces": {
    "packages": [
      "web/*",
      "configs/*",
      "packages/*",
      "@tunnckocore/*"
    ],
    "nohoist": [
      "ghub.now.sh/**/*",
      "pkg.tunnckocore.com/**"
    ]
  },
  "scripts": {
    "start": "hela",
    "bootstrap": "lerna bootstrap --since",
    "bundle": "ROLLUP_FORCE_RELOAD=1 yarn start bundle",
    "clean:dist": "rm -rf {web,configs,packages,@tunnckocore}/*/dist",
    "clean:fresh": "lerna clean -y && rm -rf node_modules",
    "cleanup": "yarn clean:dist && yarn clean:fresh",
    "patch:sade": "cp patches/sade/* node_modules/sade/lib/",
    "patch:verb": "cp patches/verb-repo-helpers/index.js node_modules/verb-repo-helpers/index.js",
    "postsetup": "yarn patch:verb && yarn patch:sade",
    "postsetup:ci": "yarn patch:verb && yarn patch:sade",
    "pre-commit": "yarn docs && yarn fmt",
    "readme": "hela gen:readme > README.md",
    "refresh": "yarn run cleanup && yarn run setup",
    "release": "lerna version && lerna publish from-package",
    "setup": "yarn && yarn bootstrap",
    "setup:ci": "yarn --frozen-lockfile && yarn bootstrap",
    "test": "CI=1 yarn start test",
    "test:legacy": "CI=1 yarn run:node",
    "testy": "hela gen:cov && yarn start docs && yarn run fmt",
    "fmt": "yarn format '**/*'",
    "format": "prettier --write",
    "run:node": "jest -c packages/jest-runner-node/src/config.js"
  },
  "dependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-transform-dotall-regex": "^7.7.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@babel/preset-typescript": "^7.7.2",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-json": "^4.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@tunnckocore/scripts": "^1.3.0",
    "@typescript-eslint/parser": "^2.8.0",
    "@wessberg/rollup-plugin-ts": "^1.1.80",
    "asia": "^1.0.0-rc.31",
    "babel-preset-proposal-typescript": "^1.5.0",
    "builtin-modules": "^3.1.0",
    "chalk": "^3.0.0",
    "enquirer": "^2.3.2",
    "eslint": "^6.6.0",
    "esm": "^3.2.25",
    "hela": "^3.0.0-next.20200115.55",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lerna": "^3.18.5",
    "mukla": "^0.4.9",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "rollup": "^1.27.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-terser": "^5.1.2",
    "semver": "^6.3.0",
    "typescript": "^3.7.2",
    "verb": "verbose/verb#dev",
    "verb-generate-readme": "^0.8.0",
    "yaml": "^1.7.2"
  },
